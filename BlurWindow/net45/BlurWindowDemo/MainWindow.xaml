<control:BlurWindow x:Class="BlurWindowDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BlurWindowDemo"
        mc:Ignorable="d"
        xmlns:control="clr-namespace:TianXiaTech;assembly=BlurWindow" Icon="icon.png" BorderBrush="Transparent"
        Title="MainWindow" Height="450" Width="800">
    <Window.Background>
        <!--Specify transparency here-->
        <SolidColorBrush Color="White" Opacity=".5"/>
    </Window.Background>
    <Grid>
        <Grid.RowDefinitions>
            <!--Reserve full screen background-->
            <RowDefinition Height="26.4"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <!--Add your content here-->
        <Grid Grid.Row="1"></Grid>
    </Grid>
</control:BlurWindow>
